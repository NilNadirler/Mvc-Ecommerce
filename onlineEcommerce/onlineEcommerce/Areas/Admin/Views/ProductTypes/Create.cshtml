@model onlineEcommerce.Models.ProductType
@{
    ViewData["Title"] = "Create";
}

<br/>

<h2 class="text-info">Create Product Types</h2>

<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly"></div>
         
        <div class="form-group row">
            <div>
                <label asp-for="ProductTypeName"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProductTypeName" class="form-control"/>
            </div>
            <span asp-validation-for="ProductTypeName" class="text-danger"></span>

        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success"> Back to List</a>
        </div>

    </div>

</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}
